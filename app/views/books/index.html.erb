<h1>Book</h1>
<% @books.each do |book| %>

  <p>title</p>
  <span>
    <%= book.title %>
  </span>
  <span>
   <%= link_to book.title, book_path(book.id) %>
  </span>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h2>New book</h2>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>